<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_news">

    <fragment
        android:id="@+id/nav_news"
        android:name="com.womkk.ui.news.NewsListFragment"
        android:label="@string/nav_news"
        tools:layout="@layout/fragment_news_list" />

    <fragment
        android:id="@+id/nav_map"
        android:name="com.womkk.ui.map.MuseumMapFragment"
        android:label="@string/nav_map"
        tools:layout="@layout/fragment_museum_map" />

    <fragment
        android:id="@+id/nav_about_museum"
        android:name="com.womkk.ui.about.MuseumInfoFragment"
        android:label="@string/nav_about_museum"
        tools:layout="@layout/fragment_museum_info" />

    <fragment
        android:id="@+id/nav_about_app"
        android:name="com.womkk.ui.about.AppInfoFragment"
        android:label="@string/nav_about_app"
        tools:layout="@layout/fragment_app_info" />

    <fragment
        android:id="@+id/nav_exhibits"
        android:name="com.womkk.ui.exhibits.ExhibitsListFragment"
        android:label="@string/nav_exhibits"
        tools:layout="@layout/fragment_exhibit_list">
        <action
            android:id="@+id/action_exhibitsListFragment_to_exhibitDetailsFragment"
            app:destination="@+id/exhibitDetailsFragment">
            <argument
                android:name="exhibitId"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/exhibitDetailsFragment"
        android:name="com.womkk.ui.exhibits.ExhibitDetailsFragment"
        android:label="@string/exhibit_details"
        tools:layout="@layout/fragment_exhibit_details">
        <argument
            android:name="exhibitId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/addReviewFragment"
        android:name="com.womkk.ui.reviews.AddReviewFragment"
        android:label="AddReviewFragment">
        <action
            android:id="@+id/action_addReviewFragment_to_reviewListFragment"
            app:destination="@id/reviewListFragment" />
    </fragment>

    <fragment
        android:id="@+id/reviewListFragment"
        android:name="com.womkk.ui.reviews.ReviewListFragment"
        android:label="@string/nav_reviews">
        <action
            android:id="@+id/action_reviewListFragment_to_addReviewFragment"
            app:destination="@id/addReviewFragment" />
    </fragment>

    <fragment
        android:id="@+id/fullscreenImageFragment"
        android:name="com.womkk.ui.fullscreenImage.FullscreenImageFragment"
        android:label="FullscreenImageFragment">
        <argument
            android:name="imageUrl"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.womkk.ui.settings.SettingsFragment"
        android:label="@string/nav_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/nav_account"
        android:name="com.womkk.ui.account.AccountFragment"
        android:label="@string/nav_account"
        tools:layout="@layout/fragment_account" />

    <fragment
        android:id="@+id/nav_tickets"
        android:name="com.womkk.ui.tickets.TicketsFragment"
        android:label="@string/nav_tickets"
        tools:layout="@layout/fragment_tickets" />
</navigation>
